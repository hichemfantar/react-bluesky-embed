{
  "name": "bluesky-embed-core",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/hichemfantar/react-bluesky-embed.git",
    "directory": "packages/react-bluesky-core"
  },
  "author": "Hichem Fantar (https://bsky.app/profile/opensauced.bsky.social)",
  "homepage": "https://bluesky-embed.vercel.app",
  "keywords": [
    "bluesky",
    "bsky",
    "embed"
  ],
  "scripts": {
    "build": "pnpm build:swc && pnpm types",
    "build:swc": "swc src -d dist --copy-files",
    "dev": "pnpm build:swc -w",
    "types": "tsc --emitDeclarationOnly",
    "lint": "TIMING=1 eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
    "clean": "rm -rf dist && rm -rf .turbo"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hichemfantar/react-bluesky-embed/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "default": "./dist/index.js"
    },
    "./api": "./dist/api/index.js"
  },
  "files": [
    "dist/**/*.{js,d.ts,css}"
  ],
  "typesVersions": {
    "*": {
      "index": [
        "src/index"
      ],
      "api": [
        "src/api/index"
      ],
      "*": []
    }
  },
  "publishConfig": {
    "access": "public",
    "typesVersions": {
      "*": {
        "index": [
          "dist/index.d.ts"
        ],
        "api": [
          "dist/api/index.d.ts"
        ],
        "*": []
      }
    }
  },
  "dependencies": {
    "@atproto/api": "^0.13.17",
    "@swc/helpers": "^0.5.15"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.9.3",
    "@types/node": "20.10.5",
    "chokidar": "^3.5.3",
    "eslint": "^8.56.0",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2"
  }
}
